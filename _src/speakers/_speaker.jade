article.speaker
    h1
        a(href='/speakers/#{slug}') #{speaker.name}
    div.row.hide-small
        div.nine.columns.bio
            p
                != speaker.bio
        div.three.columns.profile
            img(src='/speakers/#{slug}/#{slug}.jpg')
        hr
    h3 Sessions
    for session in speaker.sessions 
        if public.sessions[session]
            h4
                a(href='/sessions/#{session}') #{public.sessions[session]._data.index.name}
    